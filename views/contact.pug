            input(type="email", class="myInput", name="email", placeholder="Ener Your email id")
            input(type="text", class="myInput", name="address", placeholder="Ener Your address")
            input(type="text", class="myInput", name="desc", placeholder="Ener Your concern")
            button(class="btn")  
