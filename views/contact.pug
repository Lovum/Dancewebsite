block style 
    style 
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div.container 
        h1 Contact Us
        form(action="/contact",method="post" class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Ener Your Name")
